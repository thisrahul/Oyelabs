<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Oyelabs" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="demo">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">-0.02</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="search_stor">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#7C7C7C</item>
    </style>

    <style name="exclusive_o">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#181725</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="see_all">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#53B175</item>
    </style>

    <style name="h1">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.01</item>
        <item name="android:textColor">#181725</item>
    </style>

    <style name="h2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#7C7C7C</item>
    </style>

    <style name="price">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.01</item>
        <item name="android:textColor">#181725</item>
    </style>

    <style name="count">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="pulses">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#3E423F</item>
    </style>

    <style name="detail">
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0</item>
        <item name="android:textColor">#181725</item>
    </style>

</resources>